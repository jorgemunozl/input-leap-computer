    echo -e "   ${GREEN}leap start${NC}     - Connect to server"
    echo -e "   ${GREEN}leap status${NC}    - Check if it's working"
    echo ""
    echo -e "${YELLOW}ğŸ’¡ Pro tip: The next time you log in, Input Leap will start automatically!${NC}"
else
    echo ""
    echo -e "${RED}âŒ Something went wrong during setup.${NC}"
    echo -e "${YELLOW}ğŸ’¡ Don't panic! Try these steps:${NC}"
