echo "â•‘                   ğŸš€ SUPER SIMPLE INSTALLER ğŸš€                â•‘"
echo "â•‘                                                               â•‘"
echo "â•‘              Just sit back and let it do its magic!          â•‘"
echo "â•‘              Perfect for complete beginners! ğŸ‘¶               â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo -e "${NC}"

# Check if we're in the right place
if [[ ! -f "setup.sh" ]]; then
    echo -e "${RED}âŒ ERROR: You're not in the right directory!${NC}"
    echo -e "${YELLOW}ğŸ’¡ TIP: Make sure you're in the input-leap folder:${NC}"
    echo -e "    ${CYAN}cd input-leap${NC}"
    echo -e "    ${CYAN}./install${NC}"
    exit 1
fi

# Check if running as root (super common mistake)
if [[ $EUID -eq 0 ]]; then
    echo -e "${RED}âŒ ERROR: Don't use 'sudo' with this script!${NC}"
    echo -e "${YELLOW}ğŸ’¡ TIP: Run it as your normal user:${NC}"
    echo -e "    ${CYAN}./install${NC}"
    echo -e "${YELLOW}    (The script will ask for sudo when it really needs it)${NC}"
    exit 1
fi

# Friendly explanation
echo -e "${BLUE}ğŸ¤– What this script will do:${NC}"
