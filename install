case "$confirmation" in
    [nN]|[nN][oO])
        echo -e "${YELLOW}ğŸ‘‹ No problem! Run this again when you're ready.${NC}"
        exit 0
        ;;
    *)
        echo -e "${GREEN}ğŸš€ Let's do this!${NC}"
        echo ""
        ;;
esac

# Run the actual setup
echo -e "${BLUE}ğŸ”§ Starting the magic...${NC}"
