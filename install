if ./setup.sh; then
    echo ""
    echo -e "${GREEN}ğŸ‰ SUCCESS! Input Leap is ready to go! ğŸ‰${NC}"
    echo ""
    echo -e "${CYAN}ğŸ“± Quick start:${NC}"
